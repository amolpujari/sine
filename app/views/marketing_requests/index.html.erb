<% cache "/marketing_requests/index.html" do %>
<div class="page-header">
  <%= link_to new_marketing_request_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Request
  <% end %>
  <h4>Requests</h4>
</div>

<div class="table-responsive" data-turbolinks="false">
  <table id="marketing_requests" data-source="<%= marketing_requests_url(format: "json") %>" class="table table-striped table-hover datatable">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Priority</th>
        <th>Submitted</th>

        <th style="padding-right: 0; margin-right: 0;">
          <div class="dropdown">
            <span class="dropdown-toggle" id="statusFilter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <span class="glyphicon glyphicon-filter"></span>
            </span>
            <ul class="dropdown-menu" aria-labelledby="statusFilter">
              <li><a class="marketing_request_state selected" data-state="new"       data-label="New"       href="#" >&nbsp;</a></li>
              <li><a class="marketing_request_state selected" data-state="in_review" data-label="In Review" href="#" >&nbsp;</a></li>
              <li><a class="marketing_request_state selected" data-state="reopened"  data-label="Reopened"  href="#" >&nbsp;</a></li>
              <li><a class="marketing_request_state selected"          data-state="accepted"  data-label="Accepted"  href="#" >&nbsp;</a></li>
              <li><a class="marketing_request_state selected"          data-state="rejected"  data-label="Rejected"  href="#" >&nbsp;</a></li>
              <li><a class="marketing_request_state selected" data-state="stale"     data-label="Stale"     href="#" >&nbsp;</a></li>
            </ul>
          </div>
        </th>
        <th style="padding-left: 0; margin-left: -4px;">Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<% end %>
