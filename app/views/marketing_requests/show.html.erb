<div class="page-header">
  <%= link_to marketing_requests_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_marketing_request_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h4><%= @marketing_request.title %></h4>
</div>

<dl class="dl-horizontal">
  <dt></dt>
  <dd>
    <% unless @marketing_request.complete? %>
      <%= link_to 'Mark as Complete', complete_marketing_request_path, 'data-method' => :put, class: 'btn btn-default' %>
    <% end %>

    <span class="label pull-right label-<%=@marketing_request.workflow_state %>"><%= @marketing_request.workflow_state.humanize.upcase %></span>
  </dd>
  <br>

  <dt>Description:</dt>
  <dd><%= @marketing_request.description.html_safe %></dd>
  <br>

  <dt>Owner:</dt>
  <dd><%= @marketing_request.submitted_by %></dd>

  <dt>Created at:</dt>
  <dd><%= local_time_ago @marketing_request.created_at %></dd>

  <dt>Last updated at:</dt>
  <dd><%= local_time_ago @marketing_request.updated_at %></dd>

</dl>




<div class="page-header">
  <h4>Files</h4>
    <div class="list-group list-group--block">
      <% @marketing_request.documents.each do |document| %>
        <div class="list-group__wrap">
            <a class="list-group-item media" href="<%= document.attachment.url %>" download>
              <div class="media-body list-group__text">
                  <strong><%= document.public_name %></strong>
                  <div class="list-group__attrs">
                      <div><%= local_time document.created_at %></div>
                  </div>
              </div>
            </a>
        </div>
      <% end %>
    </div>
    <div class="detail-info__header clearfix">
      <div class='actions'>
        <a class="fileinput-button" type="button">
          <span class="btn btn-primary"><i class='fa fa-upload'></i> Upload</span>
          <%= form_for @marketing_request, :html => {:multipart => true}, class: 'form-control' do |f| %>
            <%= file_field_tag "marketing_request[documents_attributes][][attachment]", multiple: true, onchange:"javascript:this.form.submit();" %>
          <% end %>
        </a>
      </div>
    </div>
</div>


<div class="page-header">
  <h4>Discussion</h4>
</div>
<%= commontator_thread(@marketing_request) %>

<br><br><br><br><br><br><br><br><br><br><br><br><br><br>
<div class="page-header">
  <% if @marketing_request.complete? %>
    <%= link_to 'Reopen', reopen_marketing_request_path, 'data-method' => :put, class: 'btn btn-default' %>
  <% end %>

  <%= link_to @marketing_request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  do %>
    <span class="glyphicon glyphicon-trash"></span>
    Delete Request
  <% end %>
  <h4>&nbsp;</h4>
</div>
